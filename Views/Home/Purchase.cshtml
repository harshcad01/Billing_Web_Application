@{
    ViewData["Title"] = "Purchase";
}

<div class="container mt-5">
    <div class="row">
        <!-- Product Display Area -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    Products Details
                </div>
                <div class="card-body scrollable-card">
                    <!-- Display products here -->
                    <div class="mb-3">
                        <h5>Product</h5>
                        <input type="text" class="form-control" placeholder="Product Name" />
                    </div>
                    <div class="mb-3">
                        <h5>MRP</h5>
                        <input type="number" class="form-control" placeholder="Product Price" />
                    </div>
                    <div class="mb-3">
                        <h5>Our Price</h5>
                        <input type="number" class="form-control" placeholder="Our price" />
                    </div>
                    <div class="mb-3">
                        <h5>Quantity</h5>
                        <input type="number" class="form-control" placeholder="Quantity" />
                    </div>
                    <div class="mb-3">
                        <h5>Seller</h5>
                        <input type="text" class="form-control" placeholder="Seller Name" />
                    </div>
                    <div class="mb-3">
                        <h5>Company Name</h5>
                        <input type="text" class="form-control" placeholder="Company Name" />
                    </div>
                    <div class="mb-3">
                        <h5>Company Email</h5>
                        <input type="text" class="form-control" placeholder="Company Email" />
                    </div>
                    <div class="mb-3">
                        <h5>Company Contact No</h5>
                        <input type="text" class="form-control" placeholder="Company Number" />
                    </div>
                    <div class="mb-3">
                        <h5>Company Address</h5>
                        <input type="text" class="form-control" placeholder="Company Adderss" />
                    </div>
                    <!-- Add more products here -->
                    <button class="btn btn-success mt-2">Add to Cart</button>
                </div>
            </div>
        </div>
        <!-- Cart -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-dark text-white">Cart</div>
                <div class="card-body">
                    <!-- Display items in cart here -->
                    <ul class="list-group">
                        <!-- Example cart item: -->
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Product 1
                            <span class="badge badge-primary badge-pill">$10</span>
                        </li>
                        <!-- Add more cart items here -->
                    </ul>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary btn-block">
                        Proceed to Checkout
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>