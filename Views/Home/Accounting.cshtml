@{
    ViewData["Title"] = "Accounting";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Accounting and Managing</h2>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="invoices-tab" data-toggle="tab" href="#invoices" role="tab"
                aria-controls="invoices" aria-selected="true"><i class="fas fa-file-invoice"></i> Invoices</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="expenses-tab" data-toggle="tab" href="#expenses" role="tab" aria-controls="expenses"
                aria-selected="false"><i class="fas fa-money-bill-wave"></i> Expenses</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="reports-tab" data-toggle="tab" href="#reports" role="tab" aria-controls="reports"
                aria-selected="false"><i class="fas fa-chart-line"></i> Reports</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content mt-3" id="myTabContent">
        <!-- Invoices Tab -->
        <div class="tab-pane fade show active" id="invoices" role="tabpanel" aria-labelledby="invoices-tab">
            <!-- Display invoices and related functionality here -->
            <h4>Invoices</h4>
            <ul id="invoiceList"></ul>
        </div>
        <!-- Expenses Tab -->
        <div class="tab-pane fade" id="expenses" role="tabpanel" aria-labelledby="expenses-tab">
            <!-- Display expenses and related functionality here -->
            <h4>Expenses</h4>
            <ul id="expenseList"></ul>
        </div>
        <!-- Reports Tab -->
        <div class="tab-pane fade" id="reports" role="tabpanel" aria-labelledby="reports-tab">
            <!-- Display reports and related functionality here -->
            <h4>Reports</h4>
            <ul id="reportList"></ul>
        </div>
    </div>
</div>